<!--  Para footer abajo -->
<div class="wrapper"> 

<body>
    
<%- include('partials/navigation') %>


<% if (showCard) { %>

<div class="backgroundProfile">
  <div class="container p-4">
      <div class="row">
        <div class="col-md-8 mx-auto mt-4">
